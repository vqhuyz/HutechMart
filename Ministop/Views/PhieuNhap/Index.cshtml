@model IEnumerable<Ministop.ModelsView.DatHangViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="details mainLeft">
    <div>
        <div class="col-xs-3">
            <h3 class="text-center">Nhập hàng</h3>
            <div class="box">
                <div class="box-body">
                    <table id="productDetails" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Một cái gì đó</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>1</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>2</td>
                            </tr>
                            <tr>
                                <td><input type="checkbox" /></td>
                                <td>3</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Main content -->
<section class="content mainRight">
    <div>
        <div class="col-xs-9">
            @using (Html.BeginForm("Index", "KhachHang", FormMethod.Get))
            {
                <input type="text" name="search" placeholder="Theo tên, số điện thoại" />}
            <aside class="header-filter-buttons">
                <a href="@Url.Action("#")" class="btn btn-success">
                    <i class="fa fa-plus">1</i>
                </a>
            </aside>
            <div class="box">
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th><input type="checkbox" /></th>
                                <th>ID</th>
                                <th>Ngày đặt</th>
                                <th>Nhà cung cấp</th>
                                <th>Tổng tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr id="row_@item.ID">
                                    <td><input type="checkbox" /></td>
                                    <td>@item.ID</td>
                                    <td>@String.Format("{0:dd/MM/yyyy}", item.NgayDat)</td>
                                    <td>@item.TenNCC</td>
                                    <td>@String.Format("{0:0,0 VNĐ}", item.TongTien)</td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
