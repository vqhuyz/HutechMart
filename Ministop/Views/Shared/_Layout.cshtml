
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewBag.Title | Ministop</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/Assets/Admin_Layout/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Assets/Admin_Layout/css/skins/skin-blue.min.css" rel="stylesheet" />
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="@Url.Action("Index","Home")" class="logo">
                <span class="logo-mini"><b>H</b>N</span>
                <span class="logo-lg"><b>Ministop</b></span>
            </a>
            <nav class="navbar navbar-static-top position-relative" role="navigation">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button"></a>
                <div class="navbar-custom-menu">
                    @Html.Partial("_ProfileParial")
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            @Html.Partial("_SidebarParial")
        </aside>
        <div class="content-wrapper">
            <section class="content-header">
                @RenderBody()
            </section>
            <section class="content container-fluid"></section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; 2020 <a href="https://www.facebook.com/vqhuyz" target="_blank">Vũ Quốc Huy</a>.</strong> All rights reserved.
        </footer>
    </div>
    <script src="~/Assets/Admin_Layout/jquery/dist/jquery.min.js"></script>
    <script src="~/Assets/Admin_Layout/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Assets/Admin_Layout/js/adminlte.min.js"></script>

    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/data.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>


