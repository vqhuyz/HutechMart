<div class="modal-footer">
    <div class="col-md-offset-2 col-md-10">
        <button id="btnUpdate" type="submit" class="btn bg-olive btn-lg">Cập nhật</button>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#btnUpdate").click(function (e) {
            e.preventDefault();
            var data = $("#formUpdate").serialize();
            $.ajax({
                type: "POST",
                url: "/KhachHang/CapNhat",
                data: data,
                success: function (result) {
                    console.log(result);
                    if (result) {
                        alert('Cập nhật thành công!');
                        location.reload();
                    }
                    else {
                        alert('Số điện thoại hoặc Email hoặc Số CMND đã tồn tại');
                    }
                }
            })
        })
    })
</script>

