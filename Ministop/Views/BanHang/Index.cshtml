@model IEnumerable<Ministop.ModelsView.SanPhamViewModel>
@{ var session = (Ministop.ModelsView.DangNhapViewModel)Session["DangNhap"]; }

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Document</title>
    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/Assets/BanHang_Layout/bootstrap/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Assets/BanHang_Layout/fontawesome/css/all.min.css">
    <!-- Main css -->
    <link rel="stylesheet" href="~/Assets/BanHang_Layout/css/style.css">
</head>
<body>
    <!-- header -->
    <div class="container-fluid">
        <div class="row bg-info py-2">
            <div class="col-sm-12">
                <div class="col-sm-12">
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2 w-50" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-success my-2 my-sm-0" type="submit">Tìm kiếm</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
    <!-- content -->
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-5">
                <div class="row">
                    <!-- product -->
                    @foreach (var item in Model)
                    {
                        <div class="col-sm-2 bg-light product position-relative">
                            <button type="button" class="btn btn-default them-san-pham" data-id="@item.ID">

                                <img class="card-img-top" src="~/Img/SanPham/@item.HinhAnh" alt="@item.TenSanPham">
                                <div class="card-body p-0">
                                    <label>@item.TenSanPham</label>
                                </div>
                            </button>
                            <div class="text-dark price">@item.GiaBan</div>
                        </div>
                        }
                </div>
            </div>
            <div class="col-sm-4">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Tên sản phẩm</th>
                            <th>Giá bán</th>
                            <th>Số lượng</th>
                            <th>Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tboy>
                            @foreach (var test in ViewBag.SanPham)
                            {
                                <tr>
                                    <td>@test.TenSanPham</td>
                                    <td>@String.Format("{0:0,0}", test.GiaBan)</td>
                                    <td><input class="so-luong text-center" value="@test.SoLuong" data-id="@test.ID" size="3"></td>
                                    <td id="thanhtien-@test.ID">@String.Format("{0:0,0}", test.GiaBan * test.SoLuong)</td>
                                    <td>
                                        <button class="xoa-san-pham btn btn-default" data-id="@test.ID">Bỏ</button>
                                    </td>
                                </tr>
                            }
                        </tboy>
                </table>
            </div>
            <div class="col-sm-3">
                <input id="maNV" type="hidden" value="@session.ID" />
                <input id="tongTien" type="hidden" value="@Ministop.Common.DanhSachSanPham.DanhSach.TongTien" />
                <label><b>Nhân viên: @session.TenNhanVien</b></label>
                <input class="form-control mr-sm-2 w-100 mt-3" type="text" placeholder="Mã khách hàng" aria-label="Search">
                <div class="w-25 bg-info text-white my-3 text-center p-2">
                    Hóa Đơn
                </div>
                <div class="border-bottom py-2">
                    <label class="text-danger font-weight-bold">Số lượng: </label>
                    <label id="so-luong" class="w-50 ml-5 text-right">@Ministop.Common.DanhSachSanPham.DanhSach.SoLuong Sản phẩm</label>
                </div>
                <div class="border-bottom py-2">
                    <label class="text-danger font-weight-bold">Tổng tiền: </label>
                    <label id="tong-tien" class="w-50 ml-5 text-right">@String.Format("{0:0,0} VNĐ", Ministop.Common.DanhSachSanPham.DanhSach.TongTien)</label>
                </div>
                <div class="row mt-3">
                    <div class="col-sm-12 text-right">
                        <a href="/BanHang/XoaHet">Hủy đơn</a>
                    </div>
                </div>

                <div class="row px-3  mt-3">
                    <button class="col-sm-12 btn btn-success thanh-toan">
                        Thanh toán
                    </button>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Assets/BanHang_Layout/jquery/jquery-3.5.1.js"></script>
    <script src="~/Assets/BanHang_Layout/js/script.js"></script>
    <script>
        $(function () {
            $(".thanh-toan").click(function () {
                var maNV = $("#maNV").val();
                var tongTien = $("#tongTien").val();

                $.ajax({
                    type: "POST",
                    url: "/BanHang/ThanhToan",
                    data: { maNV, tongTien },
                    success: function (response) {

                    }
                });
            });

            $(".them-san-pham").click(function () {
                id = $(this).attr("data-id");
                $.ajax({
                    url: "/BanHang/ThemSanPham",
                    data: { id: id },
                    success: function (response) {
                        $("#so-luong").html(response.SoLuong + "Sản phẩm");
                        $("#tong-tien").html(response.TongTien + "VNĐ");
                    }
                });
            });

            $(".so-luong").keyup(function () {
                id = $(this).attr("data-id");
                soluong = $(this).val();
                $.ajax({
                    url: "/BanHang/CapNhatSoLuong",
                    data: { id: id, soLuong: soluong },

                    success: function (response) {
                        $("#so-luong").html(response.SoLuong + "Sản phẩm");
                        $("#tong-tien").html(response.TongTien + "VNĐ");
                        $("#thanhtien-" + id).html(response.ThanhTien);

                    }
                });
            });

            $(".xoa-san-pham").click(function () {
                id = $(this).attr("data-id");
                tr = $(this).parents("tr");
                $.ajax({
                    url: "/BanHang/XoaSanPham",
                    data: { id: id },
                    success: function (response) {
                        $("#so-luong").html(response.SoLuong);
                        $("#tong-tien").html(response.TongTien);
                        tr.hide(500);
                    }
                });
            });
        });
    </script>
</body>
</html>