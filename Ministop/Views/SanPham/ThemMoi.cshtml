@model Ministop.ModelsView.SanPhamViewModel

@section Scripts{
    <script>
        $(document).ready(function () {
            $("#btnCreate").click(function (e) {
                e.preventDefault();
                var TenLoai = ("#TenLoai").val();
                var obj = {
                    TenLoai: TenLoai
                }
                console.log(TenLoai);
                console.log(obj);
                $.ajax({
                    type: "POST",
                    url: "/SanPham/LoaiSanPham",
                    data: obj,
                    success: function (result) {
